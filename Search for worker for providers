<div class="content">

        <form method="POST">
          <input type="search" placeholder="Найти" name="search">
          <button name="submit">Поиск</button>
        </form>

        <center>
        <table>
          <?php
          if(isset($_POST['submit']))
          {
            $search = $_POST['search'];
            $result = mysqli_query($connect, "SELECT * FROM `User` WHERE SurnameUser like '%$search%' OR NameUser like '%$search%' OR PatronumicUser like '%$search%' OR EmailUser like '%$search%' ");

            if(!empty($_POST['search']))
            {
              if($result)
              {
                if(mysqli_num_rows($result) > 0)
                {
                  echo '
                  <tr>
                  <th></th>
                  <th>Фамилия</th>
                  <th>Имя</th>
                  <th>Отчество</th>
                  <th>Номер телефона</th>
                  <th>Почта</th>
                  </tr>
                  ';

                  while($row = mysqli_fetch_assoc($result)){
                  echo '
                  <tr>
                  <td><img src='.$row['ImageUser'].' width="100"></td>
                  <td>'.$row['SurnameUser'].'</td>
                  <td>'.$row['NameUser'].'</td>
                  <td>'.$row['PatronumicUser'].'</td>
                  <td>'.$row['PhoneNumberUser'].'</td>
                  <td>'.$row['EmailUser'].'</td>
                  </tr>
                  ';
                  }
                }
                else{
                  echo '<br><h3>Работник не найден</h3>';
                }
              }
            }
            else{
              echo '<br><h3>Введите запрос для поиска</h3>';
            }
          }
          ?>

        </table>
      </center>
    </div>
