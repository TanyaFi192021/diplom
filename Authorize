 Форма авторизации для работника
 <?php
session_start();

if($_SESSION['user'])
{
    header('Location: PageWorker.php');
}
header("Content-Type: text/html; charset=UTF-8");
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация</title>
    <link rel="stylesheet" href="authorize.css" type="text/css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,700,700italic|Playfair+Display:400,700&subset=latin,cyrillic">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
</head>
<body>
    <header>
        <div id="logo">
            <span><a href="MainPage.php">DocInter</a></span>
        </div>
    </header>
    <div id="clear"></div><br>
    <div id="content">
        <form class="decor" action="vendor/signin.php" method="post">
            <div class="circle"></div>
            <div class="form-inner">
            <h3>Вход</h3>
            <label>Почта</label>
            <input type="text" name="EmailUser" placeholder="Ваша почта" required>
            <label>Пароль</label>
            <input type="password" name="PasswordUser" placeholder="Ваш пароль" required><br>
            <button type="submit">Вход</button>
            <a href="RegistrationWorker.php"><input type="button" value="Регистрация"></a>
            <?php
            if($_SESSION['message'])
            {
                echo '<p class="msg"> '. $_SESSION['message'] .' </p>';
            }
            unset($_SESSION['message']);
            ?> 
            </div>
        </form>
    </div> 
</body>
</html>

