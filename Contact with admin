Логика отправления сообщения для поставщиков
<?php
session_start();
require_once 'connect.php';


$TopicMessage = $_POST['TopicMessage'];
$TypeMessage = $_POST['TypeMessage'];
$TextMessage = $_POST['TextMessage'];
$SenderMessage = $_POST['SenderMessage'];
$DateMessage = $_POST['DateMessage'];
$EmailRecipient = $_POST['EmailRecipient'];


    mysqli_query($connect, "INSERT INTO `Message` (`IDMessage`, `TopicMessage`, `TypeMessage`, `TextMessage`, `SenderMessage`, `DateMessage`, `EmailRecipient`) VALUES (NULL, '$TopicMessage', '$TypeMessage', '$TextMessage', '$SenderMessage', '$DateMessage', '$EmailRecipient')");

    header("Location: ../PageProvider.php");
?>
