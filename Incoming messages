        <?php
        $message = mysqli_query($connect, "SELECT `IDMessage`, `TopicMessage`, `TypeMessage`, `TextMessage`, `SenderMessage`, `DateMessage` FROM `Message`");
        $message = mysqli_fetch_all($message);
        foreach ($message as $message) {
          ?>

          <tr>
            <td><b>Тема сообщения:</b> <?= $message[1] ?><br>
            <b>Тип сообщения:</b> <?= $message[2] ?><br>
            <b>Текст сообщения:</b> <?= $message[3] ?><br>
            <b>Отправитель:</b> <?= $message[4] ?><br>
            <b>Дата отправки:</b> <?= $message[5] ?><br>
          </td>
            <td><a href="vendor/deleteMessage.php?IDMessage=<?= $message[0] ?>"><input type="button" class="btn" value="Удалить"></input></a></td>
          </tr>

          <?php
        }
        ?>
        </table>

        <table>
        <?php
        $mess = mysqli_query($connect, "SELECT `IDMess`, `TopicMess`, `TypeMess`, `TextMess`, `SenderMess`, `DateMess` FROM `Report`");
        $mess = mysqli_fetch_all($mess);
        foreach ($mess as $mess) {
          ?>

          <tr>
            <td><b>Тема сообщения:</b> <?= $mess[1] ?><br>
            <b>Тип сообщения:</b> <?= $mess[2] ?><br>
